<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sobre - Diário de Viagens</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <h1>Diário de Viagens</h1>
        <nav>
            <ul>
                <li><a href="/viagens">Home</a></li>
                <li><a href="/viagens/all">Todas</a></li>
            </ul>
        </nav>
    </header>
    <main>
        
        <section class="container my-5">
            <div class="row">

                <% viagens.forEach(function(trip) { %>

                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img class="card-img-top" src="/images/<%=trip.image_path%>" alt="<%=trip.image_alt%>">
                            <div class="card-body">
                                <h5 class="card-title"><%= trip.title %></h5>
                                <p class="card-text"><%= trip.card_description %></p>
                                <a href="/viagens/all/<%=trip.id%>" class="btn btn-primary botao-card">Veja mais</a>
                            </div>
                        </div>
                    </div>
            
                <% }); %>

            </div>
        </section>
    </main>
    <footer>
        <p>&copy; 2024 Diário de Viagens</p>
    </footer>
</body>
</html>
